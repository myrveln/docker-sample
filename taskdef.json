{
    "executionRoleArn": "arn:aws:iam::{{ AWS_ACCOUNT_ID }}:role/{{ APPLICATION_NAME }}-task-execution-role",
    "containerDefinitions": [
        {
            "name": "{{ APPLICATION_NAME }}",
            "image": "{{ IMAGE_NAME }}",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "protocol": "tcp",
                    "containerPort": 80
                }
            ],
            "logConfiguration": { 
                "logDriver": "awslogs",
                "options": { 
                   "awslogs-group" : "/ecs/{{ APPLICATION_NAME }}",
                   "awslogs-region": "{{ AWS_REGION }}",
                   "awslogs-stream-prefix": "ecs"
                }
             }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "runtimePlatform": {
        "operatingSystemFamily": "LINUX",
        "cpuArchitecture": "ARM64"
    },
    "networkMode": "awsvpc",
    "cpu": "256",
    "memory": "512",
    "family": "{{ APPLICATION_NAME }}"
}
